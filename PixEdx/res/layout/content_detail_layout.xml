<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp" 
        android:orientation="horizontal"
     	android:layout_weight="1.3"
     	android:baselineAligned="false"
     	android:layout_marginLeft="60dp"
     	android:layout_marginRight="60dp"
     	android:layout_marginTop="30dp"
        
        >
		 <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
      		
            android:orientation="horizontal" 
            android:layout_weight="1"
            android:gravity="center"
            >
		        <ImageView
		            android:id="@+id/imageViewMediaPic"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:src="@drawable/program_loading_bg"
		            android:scaleType="fitXY"
		            />
		</LinearLayout>
		
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            >
		    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
         	android:layout_weight="4"
            android:orientation="vertical" 
           
            >    
            
	           
	            <TextView
	            android:id="@+id/textViewTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	         
	            android:text="片名：凤凰卫视调试视频" 
	            android:textSize="28sp"/>

	             <TextView
	            android:id="@+id/textViewPublishTime"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            android:text="发布时间:2014-3-23 12:23:49" />

	             <TextView
	            android:id="@+id/textViewActor"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            android:text="演员：吴小莉,胡一虎" />
	              <TextView
	            android:id="@+id/textViewAuthor"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="28sp"
	            android:text="导演：吴小莉" />
	            
               <ScrollView
			    android:id="@+id/SCROLLER_ID"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:scrollbars="vertical"
			    android:fillViewport="true">
		              <TextView
		            android:id="@+id/textViewDesc"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="28sp"
		          
		            android:text="简介：凤凰卫视中文台，全球华人新闻大全" 
		            />
	            </ScrollView>   
            </LinearLayout>
            
		    
		    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" 
            android:gravity="center|bottom"
           
            >

		        <ImageButton
		            android:id="@+id/buttonPlay"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/play_btn"
		            />

		        <ImageButton
		            android:id="@+id/buttonDetail"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="30dp"
		            android:background="@drawable/book_btn"
		            />

		        <ImageButton
		            android:id="@+id/buttonBook"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="30dp"
		            android:background="@drawable/detail_btn"
		            />
		        
		    </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" 
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginLeft="60dp"
         android:layout_marginRight="60dp"
         android:layout_marginBottom="20dp"
        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关视频:" 
            android:textSize="28sp"/>

        <HorizontalScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
          
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                
             >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie1" 
                    />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:src="@drawable/movie2" 
                     
                    android:scaleType="fitXY"/>
                <ImageView
                    android:id="@+id/imageView3"
                     android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie3" 
                    />
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie4" />
                <ImageView
                    android:id="@+id/imageView5"
                   android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie5" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie6" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/related_content_width"
                    android:layout_height="@dimen/related_content_height"
                    android:layout_margin="@dimen/related_content_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/movie7" />
                

		        
            </LinearLayout>
        </HorizontalScrollView>
          
    </LinearLayout>

 

</LinearLayout>
