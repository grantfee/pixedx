<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >

   <HorizontalScrollView
                android:id="@+id/horizontalScrollViewCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
				android:layout_marginBottom="@dimen/screen_bottom_margin"
                >
                
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
   
    >
    
        
        <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:rowCount="1"
        android:columnCount="2"
        android:orientation="vertical"

        >
        
         <FrameLayout
		 	android:layout_gravity="fill"
			android:layout_width="@dimen/category_framelayout_double_width"
			android:layout_height="@dimen/category_framelayout_double_height"
			android:padding="3dp"
			
			>
            <ImageView
                android:id="@+id/imageViewPlaySetting"
                android:layout_width="@dimen/category_pic_double_width"
                android:layout_height="@dimen/category_pic_double_height"
                
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:focusable="true"
              	android:src="@drawable/sys_setting"
                 
                />
          
            <TextView
                android:id="@+id/textViewPlaySetting"
                 android:layout_width="@dimen/category_pic_double_width"
                android:layout_height="wrap_content"
                android:text="播放设置" 
                android:background="#000000"
                android:alpha="0.6"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:focusable="false"
               />

        </FrameLayout>
        
         
           <FrameLayout
            android:layout_gravity="fill"
            android:layout_width="@dimen/category_framelayout_double_width"
			android:layout_height="@dimen/category_framelayout_double_height"
           
            android:padding="3dp"
       	>
            <ImageView
                android:id="@+id/imageViewSvrSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sys_setting" 
                android:layout_gravity="center"                
                android:focusable="true"
                android:scaleType="fitXY"
              
            />
			
            <TextView
                android:id="@+id/textViewSvrSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:alpha="0.6"
                android:text="服务器设置" 
                android:layout_gravity="bottom"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:focusable="false"
                android:textSize="25sp"/>
            
        </FrameLayout>
            
        </GridLayout>
    </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
